APP_NAME=ai-task-agent
ENV=dev

# LLM (100% free local via Ollama)
LLM_PROVIDER=ollama
OLLAMA_MODEL=llama3.1:8b
OLLAMA_URL=http://host.docker.internal:11434/api/chat

# Redis
REDIS_URL=redis://redis:6379/0

# Postgres
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/agentdb

# Agent
AGENT_MAX_STEPS=6
TOOL_TIMEOUT_SECONDS=10
